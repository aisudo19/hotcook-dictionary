erDiagram
    users ||--o{ user_recipes : has
    recipes ||--o{ user_recipes : referenced_by
    recipes ||--o{ recipe_details : contains

    users {
        string uid PK
        string displayName
        string email
        timestamp createdAt
        timestamp updatedAt
    }

    recipes {
        string recipeId PK
        string title
        string deviceName
        string category
        text memo
        timestamp createdAt
        timestamp updatedAt
    }

    user_recipes {
        string id PK
        string userId FK
        string recipeId FK
        boolean hasCooked
        boolean wantToCook
        int cookCount
        timestamp lastCookedAt
        timestamp createdAt
        timestamp updatedAt
    }

    ingredients {
        string id PK FK
        string cookingTime
        string servings
        string title
        array ingredients
        array instructions
    }